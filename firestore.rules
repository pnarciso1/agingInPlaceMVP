rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // User profiles
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Senior profiles
    match /seniors/{seniorId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && request.auth.uid in resource.data.care_team;
      
      // allow update if you are in the team OR if you are adding YOURSELF to the team
      allow update: if request.auth != null && (
        (request.auth.uid in resource.data.care_team) || 
        (request.resource.data.care_team.hasAll(resource.data.care_team) && request.auth.uid in request.resource.data.care_team)
      );

      match /assessments/{assessmentId} {
        allow read, write: if request.auth != null && 
          request.auth.uid in get(/databases/$(database)/documents/seniors/$(seniorId)).data.care_team;
      }
    }

    // Invitations
    match /invites/{inviteId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update: if request.auth != null; 
    }
    
    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
